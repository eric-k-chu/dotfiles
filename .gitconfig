[include]
  path = ~/.env.gitconfig
	
[alias]
	br = branch
	sw = switch
	swc = switch -c
	brm = branch -m
	brd = branch -D
	pl = pull origin
	plr = pull origin --rebase
	plm = pull origin main
	rbm = rebase main
	com = commit -m
	psh = push origin
	up = push origin -f
	undo = reset HEAD~
	fclean = reset --hard HEAD
	squash = "!f() { git reset --soft HEAD~$1 && git add . && git commit -m "$2"; }; f"
	fa = fetch --all
	aa = add .

[merge]
	conflictstyle = zdiff3

[theme]
	syntax-theme = gruvbox-dark
